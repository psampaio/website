---
import {reader} from '../reader'

export interface Props {
    name: string;
    tagLine: string;
    summary: string;
    cta: string;
}

const heroInfo = await reader.singletons.heroInfo.read();
const {name, tagLine, summary, cta} = heroInfo as Props;

